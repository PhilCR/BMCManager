<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/voltagemTemplate"
    style="@style/InformationBlockBlock" >

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:src="@drawable/ic_power_good" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="45dp"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/textPower1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power supply #1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textPowerDesc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPower1"
            android:paddingLeft="5dp"
            android:text="System Board"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textPowerNumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="5dp"
        android:text="70 W"
        android:textSize="30sp" />

</RelativeLayout>
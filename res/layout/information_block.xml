<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/informationBlock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/block"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textInformationHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/header"
        android:paddingLeft="5dp"
        android:paddingRight="0dp"
        android:text="@string/serverdetails_temperature"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="4dp"
            android:src="@drawable/ic_temperature_good" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="45dp"
            android:paddingTop="3dp" >

            <TextView
                android:id="@+id/textTemperature1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature #1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textTemperatureDesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTemperature1"
                android:paddingLeft="5dp"
                android:text="System Board"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textTemperatureNumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:text="12 ºC"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="4dp"
            android:src="@drawable/ic_temperature_good" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="45dp"
            android:paddingTop="3dp" >

            <TextView
                android:id="@+id/textTemperature2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature #2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textTemperatureDesc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTemperature2"
                android:paddingLeft="5dp"
                android:text="System Board"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textTemperatureNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:text="16 ºC"
            android:textSize="30sp" />
    </RelativeLayout>

</LinearLayout>